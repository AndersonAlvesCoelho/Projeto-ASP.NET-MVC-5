@{
    ViewBag.Title = "Home Page";

    var nomeTags = ViewBag.nome;
    var formatNome = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(nomeTags));

    var numArtigos = ViewBag.qtdArtigo;
    var formatArtigos = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(numArtigos));

}



<div class="jumbotron">
    <h1>Green News</h1>
    <p class="lead">Todavia, o desenvolvimento contínuo de distintas formas de atuação possibilita uma melhor visão global dos conhecimentos estratégicos para atingir a excelência.</p>
    <p><a href="https://localhost:44365/Artigos" class="btn btn-primary btn-lg">Artigos &raquo;</a></p>
</div>


<canvas id="grafico" width="400" height="400"></canvas>



@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js"></script>    

    <script type="text/javascript">
        var nomeTag = @formatNome;
        var numArtigos = @formatArtigos;

        console.log('numArtigos - ', numArtigos);

        $(document)
            .ready(function () {

                var ctx = $('#grafico');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: nomeTag,
                        datasets: [{
                            //label: '# of Votes',
                            data: numArtigos,
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)'
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        legend: {
                            display: false
                        },
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            });

    </script>
}